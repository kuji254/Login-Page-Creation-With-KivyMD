MDScreen:
    name:"Login_up_page"
    MDFloatLayout:
        md_bg_color:1,1,1,1
        MDIconButton:
            icon:"arrow-left"
            pos_hint:{"center_y":.95}
            user_font_size:"30sp"
            theme_text_color:"Custom"
            text_color:rgba(26,24,58,255)
            on_release:
                root.manager.transition.direction="left"
                root.manager.current="main"

        MDLabel:
            text:"W e l c o m e !"
            font_size:"23sp"
            bold:True
            font_style:"H3"
            pos_hint:{"center_y":.95}
            halign:"center"
            theme_text_color:"Custom"
            text_color:56/255,94/255,127/255,1

        MDLabel:
            text:"Sign in to continue"
            font_size:"23sp"
            font_style:"H5"
            pos_hint:{"center_y":.85}
            halign:"center"
            theme_text_color:"Custom"
            text_color:56/255,94/255,127/255,1

    MDFloatLayout:
        size_hint:.5,.8
        pos_hint:{"center_x":.5,"center_y":.5}
        MDRelativeLayout:
            pos_hint:{"center_x":.5,"center_y":.86}
            MDTextField:
                hint_text:"Email/Phone_number"
                icon_left:"account-box"
                mode:"fill"
                pos_hint:{"center_x":.5,"center_y":.5}

        MDRelativeLayout:
            pos_hint:{"center_x":.5,"center_y":.70}
            MDTextField:
                id:text_field
                hint_text:"Password"
                icon_left:"key-variant"
                password:True
                mode:"fill"
                pos_hint:{"center_x":.5,"center_y":.5}
                cursor_color:rgba(200,32,45,255)
                cursor_width:"12sp"
                multiline:False

            MDIconButton:
                icon: "eye-off"
                pos_hint: {"center_y": .5}
                pos: text_field.width - self.width + dp(8), 0
                theme_text_color: "Hint"
                on_release:
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                    text_field.password = False if text_field.password is True else True

        MDFlatButton:
            text:"LOGIN"
            size_hint:.66,.065
            pos_hint:{"center_x":.5,"center_y":.57}
            on_release:
                root.manager.transition.direction="left"
                root.manager.current="Login_up_page"
            canvas.before:
                Color:
                    rgba:52/255,0,231/255,1
                RoundedRectangle:
                    pos:self.pos
                    size:self.size
                    radius:[5]

        MDTextButton:
            pos_hint:{"center_x":.5,"center_y":.48}
            text:"Forgot Password"
            font_size:"13sp"
            halign:"center"
            theme_text_color:"Custom"
            text_color:"blue"

        MDLabel:
            text:"or"
            pos_hint:{"center_x":.5,"center_y":.39}
            font_size:"13sp"
            halign:"center"

        MDFloatLayout:
            md_bg_color:rgba(178,178,178,255)
            size_hint:.3,.002
            pos_hint:{"center_x":.3,"center_y":.385}

        MDFloatLayout:
            md_bg_color:rgba(178,178,178,255)
            size_hint:.3,.002
            pos_hint:{"center_x":.7,"center_y":.385}

        MDLabel:
            text:"Social Media Login"
            font_size:"13sp"
            halign:"center"
            pos_hint:{"center_x":.5,"center_y":.30}


        MDGridLayout:
            cols:4
            size_hint:.7,.1
            spacing:10
            pos_hint:{"center_x":.5,"center_y":.21}
            MDIcon:
                icon:"youtube"
            MDIcon:
                icon:"instagram"
            MDIcon:
                icon:"twitter"
            MDIcon:
                icon:"language-python"

        MDLabel:
            text:"Don't have an account"
            font_size:"18sp"
            font_style:"H5"
            pos_hint:{"center_x":.5,"center_y":.12}
            halign:"center"
            theme_text_color:"Custom"
        MDTextButton:
            text:"Sign up"
            pos_hint:{"center_x":.8,"center_y":.12}
            font_size:"13sp"
            halign:"center"
            theme_text_color:"Custom"
            text_color:"blue"
            on_release:
                root.manager.transition.direction="right"
                root.manager.current="Sign_up_page"




